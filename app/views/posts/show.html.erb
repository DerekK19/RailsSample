<h2>Post</h2>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @post.text %>
</p>

<h3>Comments</h3>
<table>
  <tr>
    <th width=100px align=left>Title</th>
    <th width=300px align=left>Text</th>
    <th></th>
  </tr>

<% @post.comments.each do |comment| %>
  <tr>
    <td><%= comment.commenter %></td>
    <td><%= comment.body %></td>
    <td><!--%= link_to 'Destroy', comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %--></td>
  </tr>
<% end %>
</table>

<h3>Add a comment:</h3>
<%= render "comments/form" %>

<%= link_to 'Edit Post', edit_post_path(@post) %> |
<%= link_to 'Back to Posts', posts_path %>